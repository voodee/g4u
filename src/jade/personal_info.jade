                a.vkontakte(href='#', title='GOLD4U в VK', target='_blank')
        .form_block
          .form__header
            .h2
              | Адрес доставки №1
            .links
              a.button.button--small(href='#')
                | + Добавить адрес
          .form__fields
            label.field(for='')
              span.label__title Город
              span.input
                input(type='text')
            label.field(for='')
